@{
    Layout = null;
}

#accountBox { margin-bottom: 50px; }
#accountBox.singleColumn { max-width: 800px; margin: 0 auto; }
#accountBox.twoColumn {  }
#accountBox.twoColumn .column { width: 50%; padding: 0 10px; }
#accountBox h2 { border-bottom: 1px solid #CAD9DB; padding: 5px 5px 15px 5px; }
#accountBox .input { font-size: 0; margin-bottom: 10px; }
#accountBox .input label, #accountBox .input input { display: inline-block; vertical-align: middle; }
#accountBox .input label { text-align: right; padding-right: 10px; width: 150px; }
#accountBox .input input:not([type=checkbox]) { width: calc(100% - 150px); font-size: 18px; padding: 5px; }
#accountBox .buttons { text-align: right; }
#accountBox .buttons .actionButton { padding: 10px; }
#accountBox #helpLinks { text-align: center; padding: 5px; }
#accountBox #helpLinks a { display: inline-block; padding: 5px 15px; }
#accountBox .validation { text-align: center; padding: 5px; }
#accountBox .validation:empty { display: none; }
#accountBox .error li { font-size: 20px; font-weight: bold; color: #B55130; padding: 10px; margin: 10px 0; }
#messageBox { max-width: 800px; margin: 5px auto 25px auto; padding: 10px; text-align: center; }

@@media (max-width: 1200px) {
    #accountBox.twoColumn .column { display: block; width: 100%; margin-bottom: 25px; padding: 5px 0; }
}
@@media (max-width: 600px) {
    h1 { font-size: 28px; margin: 0; }
    h2 { font-size: 22px; margin: 0; }
    #accountBox .input label { width: calc(100% - 35px); text-align: left; }
    #accountBox .input input[type=checkbox] { width: 25px; }
    #accountBox .input input:not([type=checkbox]) { width: 100%; display: block; }
}