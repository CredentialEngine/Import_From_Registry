@inherits System.Web.Mvc.WebViewPage
@using workIT.Models.Common

@{
    var widgetStyles = ( WidgetStyles )ViewData.Model;
}

/* === widget wide styles === */
/*set up banner background color*/
#mainSiteHeader { background-color:@widgetStyles.MainSiteHeader; }
/*you can change the logo over here*/
#mainSiteLogo { height: 90px; width: 90px; background-position: center center; background-repeat: no-repeat; background-size: contain; background-image: url('@widgetStyles.MainSiteLogo'); }
/* typically partners may want to hide Credential finder tagline*/
#mainSiteTagline { display: none; }
/* === search page styles === */
/* main content - search specific */
#content { padding: 0; background-color: #FFF; transition: none; }

/*set up  the searchButton color*/
.searchButton { background-color: @widgetStyles.SearchButton1 ; color: #FFFFFF; }

/*set up the filterButton color*/
.filterButton { background-color: @widgetStyles.FilterButton1; color: #FFFFFF; }

/*set up the resetButton color*/
.resetButton { background-color: @widgetStyles.ResetButton1; color: #FFFFFF; }

/*set the background-color and hide the buttons*/
.contentToggleButton { border-radius: 4px; border: 1px solid transparent; padding: 2px 5px; opacity: 0.9; -webkit-appearance: none; white-space: normal; display: inline-block; text-decoration: none; color: #3D4443; }

/*hide the viewButton*/
.viewButton { background-color: #FFFFFF; color: #000000; border: 1px solid #CAD9DB; }

/*set up color and hide the compareButton*/
.compareButton { background-color: #0F3E63; color: #FFFFFF; }

/*footerCompareButton class under compareBar*/
.footerCompareButton { background-color: #45A085; color: #FFFFFF; }


